{
  "manifest_version": 3,
  "name": "Youtube Extensions",
  "description": "the Youtube Extensions for preview thumbnail, playlistalizing channel's all videos",
  "version": "0.1.0",
  "icons": {
    "16": "images/icons/icon-16.png",
    "32": "images/icons/icon-32.png",
    "48": "images/icons/icon-48.png",
    "128": "images/icons/icon-128.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/preview_thumbnail.js"],
      "matches": ["https://www.youtube.com/watch?v=*"]
    },
    {
      "js": ["scripts/play_all_in_channel.js"],
      "matches": ["https://www.youtube.com/*/videos"]
    }
  ]
}
